{
    "compilerOptions": {
        "target": "es2022",
        "module": "node16",
        "lib": ["ES2022"],
        "moduleResolution": "node16",
        "rootDir": "./src",
        "outDir": "./build",
        "alwaysStrict": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "include": ["src/**/*"],
    // "exclude": ["node_modules"]
}